{
  "name": "eth-graphql",
  "version": "1.0.0",
  "description": "Ethereum GraphQL API",
  "main": "server/index.js",
  "lint-staged": {
    "*.js": [
      "eslint --fix \"server/**/*.js\"",
      "prettier --write --no-semi --single-quote --trailing-comma=es5",
      "git add"
    ]
  },
  "pre-commit": {
    "run": [
      "lint:staged",
      "test"
    ],
    "silent": true
  },
  "scripts": {
    "blockchain": "ganache-cli",
    "lint:staged": "lint-staged",
    "start": "npm run blockchain & nodemon --watch server server",
    "start:prod": "node server",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lukehedger/eth-graphql.git"
  },
  "keywords": [
    "ethereum",
    "graphql"
  ],
  "author": "Luke Hedger",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lukehedger/eth-graphql/issues"
  },
  "homepage": "https://github.com/lukehedger/eth-graphql#readme",
  "dependencies": {
    "ethjs-unit": "^0.1.6",
    "graphql-yoga": "^0.9.0",
    "node-fetch": "^1.7.3"
  },
  "devDependencies": {
    "eslint": "^4.16.0",
    "ganache-cli": "^6.0.3",
    "jest": "^22.1.4",
    "lint-staged": "^6.0.1",
    "nodemon": "^1.14.11",
    "pre-commit": "^1.2.2",
    "prettier": "^1.10.2"
  }
}
